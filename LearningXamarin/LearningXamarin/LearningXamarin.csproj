      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="View\Grid Mixed.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
